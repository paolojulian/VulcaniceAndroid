<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_list_request"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="#854442"
    card_view:contentPadding="5dp"
    card_view:contentPaddingLeft="10dp"
    android:layout_marginHorizontal="0dp"
    android:layout_margin="2dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/client_name"
            android:text="Client Name"
            android:textSize="24dp"
            android:textColor="@color/colorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/description"
            android:text="Black Lamborgini"
            android:textSize="14dp"
            android:textColor="@color/colorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_decline_request"
                android:background="@color/colorSemiLight"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="DECLINE"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_accept_request"
                android:background="#546d33"
                android:textColor="@color/colorLight"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="ACCEPT"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
