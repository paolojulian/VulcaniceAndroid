<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/process_request"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <!-- Description Label -->
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_shop_name"
            android:text="You are now requesting a Service"
            android:textSize="16dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/text_shop_address"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Request:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        

        <View
            android:layout_marginBottom="10dp"
            android:background="#131313"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        </View>
        <!-- SERVICE TYPE-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Pick-up: "
                android:layout_weight="3"
                android:layout_width="0dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/pickup_type"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <!-- VEHICLE TYPE-->
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Type: "
                android:layout_weight="3"
                android:layout_width="0dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/vehicle_type"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <!-- VEHICLE COLOR-->
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Color: "
                android:layout_weight="3"
                android:layout_width="0dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/vehicle_color"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- PLATE NUMBER -->
        <LinearLayout
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="Plate Number: "
                android:layout_weight="3"
                android:layout_width="0dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/plate_number_1"
                android:maxLength="4"
                android:inputType="textCapSentences"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="-"
                android:textAlignment="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/plate_number_2"
                android:maxLength="4"
                android:inputType="textCapSentences"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        // ADDITIONAL DETAILS
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/user_description"
                android:maxLength="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Additional Details" />
        </ScrollView>
        <Button
            android:id="@+id/btn_request"
            android:text="Request"
            android:layout_gravity="bottom"
            android:textColor="@color/colorLight"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|bottom"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/waiting_request"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:text="Please wait while the shop owner is processing your Request"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|bottom"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/request_declined"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:text="Your request have declined."
            android:textSize="16dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/request_timeout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:text="Request Timeout. Please try again later"
            android:textSize="16dp"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>