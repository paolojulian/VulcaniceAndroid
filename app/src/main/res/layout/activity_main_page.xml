<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLight"
    tools:context="com.vulcanice.vulcanice.DashBoard"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<include-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--layout="@layout/navigation_action"/>-->
        <Button
            android:text="Vulcanizing shop"
            android:id="@+id/btn_find_vul"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:textColor="@color/colorLight"
            android:layout_height="0dp" />
        <ImageButton
            android:id="@+id/imgbtn_find_vul"
            android:src="@drawable/vulcanice_vul_btn"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <ImageButton
            android:id="@+id/imgbtn_find_gas"
            android:src="@drawable/vulcanize_gas_menu"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <Button
            android:text="Gas station"
            android:visibility="gone"
            android:id="@+id/btn_find_gas"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorLight"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:background="@color/colorLight"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
