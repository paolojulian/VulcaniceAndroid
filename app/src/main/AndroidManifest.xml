<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vulcanice.vulcanice">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListShops" />
        <activity android:name=".SignUpActivity" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ViewMapActivity"
            android:theme="@style/AppTheme"
            android:label="Map" />

        <activity
            android:name=".testNotification"
            android:theme="@style/AppTheme"
            android:label="@string/app_title" />

        <activity
            android:name=".MainPage"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_title" />

        <activity
            android:name=".OwnerMainPage"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_title" />

        <activity
            android:name=".TrackRequestActivity"
            android:theme="@style/AppTheme"
            android:label="Tracking Client" />

        <activity
            android:name=".OwnerRequest.ClientConfirmation"
            android:theme="@style/AppTheme"
            android:label="Request Confirmation" />


        <activity
            android:name=".ViewRequestsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Requests" />

        <activity
            android:name=".ViewNearestShopActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ClientRequest.RequestShopActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            android:label="Enter Description"/>

        <activity
            android:name=".EditAccountActivity"
            android:theme="@style/AppTheme"
            android:label="Account Information" />

        <activity
            android:name=".TrackShopActivity"
            android:theme="@style/AppTheme"
            android:label="Tracking Shop" />

        <activity
            android:name=".FindShopActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".FindGasActivity"
            android:theme="@style/AppTheme"
            android:label="Finding nearest gas station" />

        <activity
            android:name=".CreateShopActivity"
            android:theme="@style/AppTheme"
            android:label="Create Station" />

        <activity
            android:name=".ViewListShopActivity"
            android:theme="@style/AppTheme"
            android:label="Station List" />

        <activity
            android:name=".MapTracking"
            android:label="@string/title_activity_map_tracking" />
        <activity
            android:name=".VerifyPhoneNumberActivity"
            android:label="Verify Phone Number" />
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".DashBoard"
            android:label="Lists" />
        <activity
            android:name=".CustomerMapActivity"
            android:label="@string/title_activity_customer_map"></activity>
    </application>

</manifest>